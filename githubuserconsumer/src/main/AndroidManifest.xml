<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khumam.githubuserconsumer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.khumam.dicodingsubmissiontwo.READ_DATABASE"/>
    <uses-permission android:name="com.khumam.dicodingsubmissiontwo.WRITE_DATABASE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DicodingSubmissionTwo">

        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DetailUserActivity"
            android:label="@string/detailTitle" />
        <activity android:name=".activity.MainActivity" />

    </application>

    <queries>
        <package android:name="com.khumam.dicodingsubmissiontwo" />
    </queries>

</manifest>